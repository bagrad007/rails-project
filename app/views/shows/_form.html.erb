<%= form_for show do |f| %>
<div class="form-group col-md-6">
<strong><%= f.label "Show Name" %></strong>
<%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
<p><strong><%= f.label "Date" %></strong></p>
<%= f.date_field :date, class: "input-group-date"%>
</div>

<%= f.submit "Book Show", class: "btn btn-success"%>

<% end %>