
<strong><h2><%= @show.name %></h2></strong>

<% if !@show.muppets.empty? %>
<% @show.muppets.each do |muppet| %>
    <p>
   <strong> <%= label_tag "Name" %>: </strong>
    <%= muppet.name %>
    </p>
    <p>
    <strong><%= label_tag "Muppet Job" %></strong>:
    <%= muppet.muppet_shows[0].job %>
    <%= link_to "Edit",  edit_muppet_path(muppet), class: "btn btn-info"%>
    </p>
<% end %>
<%# else  %>

<h3>You need muppets for the show!</h3><br>

<%= link_to "Hire a Muppet", new_user_muppet_path, class: "btn btn-success" %>

<% end %>